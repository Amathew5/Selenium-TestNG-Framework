<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN" monitorInterval="30">
    <!-- ======================================== -->
    <!--               APPENDERS                  -->
    <!-- ======================================== -->
    <Appenders>
        <!-- Console Output -->
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="[%d{yyyy-MM-dd HH:mm:ss}] %-5p [%t] %c - %m%n"/>
        </Console>
        
        <!-- General File Appender -->
        <file name="Filelogger" fileName="logs/app.log" append = "true">
        	<filters>
        		<thresholdfilter level="ERROR" onMatch="DENY" onMismatch="ACCEPT"/>
        	</filters>
            <PatternLayout pattern="[%d{yyyy-MM-dd HH:mm:ss}] %-5p %c{1} - %m%n"/>
        </file>
        <file name="ErrorFilelogger" fileName="logs/error.log" append = "true">
        	<filters>
        		<thresholdfilter level="ERROR" onMatch="ACCEPT" onMismatch="DENY"/>
        	</filters>
            <PatternLayout pattern="[%d{yyyy-MM-dd HH:mm:ss}] %-5p %c{1} - %m%n"/>
        </file>
    </Appenders>

    <!-- ======================================== -->
    <!--                 LOGGERS                  -->
    <!-- ======================================== -->
    <Loggers>
        <!-- Application/Test Framework Logger -->
        <Logger name="com.orangehrm" level="trace" additivity="false">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="Filelogger"/>
            <AppenderRef ref="ErrorFilelogger"/>
        </Logger>
    </Loggers>
</Configuration>